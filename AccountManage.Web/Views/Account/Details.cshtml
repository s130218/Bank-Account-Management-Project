@model AccountManagement.Web.Models.DTO.Account.AccountDto
<link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

@{
    Layout = null;
    ViewData["Title"] = "Details";
}

<body class="bg-secondary bg-gradient text-light">

    <div class="container py-5">
        <div class="col-md-8 mx-auto bg-dark card bg-dark text-light shadow p-4" style="border-radius: 1rem;">

            <h1 class="text-light">Details</h1>
            <hr class="bg-light" />

            <dl class="row text-light">
                <dt class="col-sm-2">AccountNumber</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.AccountNumber)</dd>

                <dt class="col-sm-2">Name</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Name)</dd>

                <dt class="col-sm-2">Email</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.Email)</dd>

                <dt class="col-sm-2">Phone Number</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.PhoneNumber)</dd>

                <dt class="col-sm-2">Balance</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.TotalAmount)</dd>
            </dl>

            <div class="row justify-content-center mt-4">
                <a asp-action="Edit" asp-route-id="@Model?.Id" class="btn btn-primary btn-lg mx-2">Edit</a>
                <a asp-action="Index" class="btn btn-danger btn-lg">Back</a>
            </div>
        </div>
    </div>

</body>
